<div class="banner booking-banner" style="background-image: linear-gradient(-225deg, rgba(255,255,255,0.6) 0%, rgba(240,240,240,0.6) 50%), url('<%= cl_image_path @flat.photo %>');">
<div class="booking-container">
  <h2 id="reservation">New Reservation for:</h2>
  <div class="row">
    <div class="col-sm-6">
      <h1><%= @flat.name %></h1>
      <h6><strong>Description:</strong> <%= @flat.description %></h6>
      <p><strong>Host:</strong> <%= @flat.user.name %></p>
      <h2>$<%=@flat.price %> per Night</h2>
    </div>
    <h1></h1>
    <div class="col-sm-6">
      <%= render 'form', booking: @booking, flat: @flat, button_text: "Send booking request", class: "btn btn-xs btn-green" %>
      <h3>TOTAL_PRICE: ></h3>
    </div>
  </div>
</div>
</div>
