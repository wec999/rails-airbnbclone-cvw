<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @flat.image %>')">
        </div>
        <div class = "card">
        <h4><%= @flat.name %></h4>
        <h4><%= @flat.location %></h4>
        <h4><%= @flat.price %></h4>
        <p><%= @flat.description %></p>
      <%= link_to 'Back', flats_path %>
      <%= link_to "Delete", flats_path(@flat),
      method: :delete,
      data: { confirm: "Are you certain?" } %>
    </div>
  </div>
</div>


